<launch>
  <group>
    <push-ros-namespace namespace="lidar"/>

    <group>
      <push-ros-namespace namespace="front_left"/>
      <node name="tf_publisher" pkg="tf2_ros" exec="static_transform_publisher"
            args="0 0.26 0 1.047 0 0 base_link livox_front_left" />

      <include file="$(find-pkg-share sensing_launch)/launch/livox_horizon.launch.py">
        <arg name="sensor_frame" value="livox_front_left" />
        <arg name="bd_code_param_path" value="$(find-pkg-share sensing_launch)/config/aip_x1/$(env VEHICLE_ID default)/livox_front_left_bd_code.param.yaml" />
      </include>
    </group>

    <group>
      <push-ros-namespace namespace="front_center"/>
      <node name="tf_publisher" pkg="tf2_ros" exec="static_transform_publisher"
            args="0 0 0 0 0 0 base_link livox_front_center" />

      <include file="$(find-pkg-share sensing_launch)/launch/livox_horizon.launch.py">
        <arg name="sensor_frame" value="livox_front_center" />
        <arg name="bd_code_param_path" value="$(find-pkg-share sensing_launch)/config/aip_x1/$(env VEHICLE_ID default)/livox_front_center_bd_code.param.yaml" />
      </include>
    </group>

    <group>
      <push-ros-namespace namespace="front_right"/>
      <node name="tf_publisher" pkg="tf2_ros" exec="static_transform_publisher"
            args="0 -0.26 0 -1.047 0 0 base_link livox_front_right" />

      <include file="$(find-pkg-share sensing_launch)/launch/livox_horizon.launch.py">
        <arg name="sensor_frame" value="livox_front_right" />
        <arg name="bd_code_param_path" value="$(find-pkg-share sensing_launch)/config/aip_x1/$(env VEHICLE_ID default)/livox_front_right_bd_code.param.yaml" />
      </include>
    </group>

  </group>
</launch>
